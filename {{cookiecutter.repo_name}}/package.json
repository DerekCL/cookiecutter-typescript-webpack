{
  "name": "{{ cookiecutter.project_name }}",
  "version": "{{ cookiecutter.version }}",
  "description": "",
  "main": "{{ cookiecutter.static_root }}/index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --compilers js:babel-register {{ cookiecutter.static_root }}/**/__tests__/**/*test*.js",
    "webpack": "NODE_ENV=production ./node_modules/.bin/webpack --config=webpack.production.config.js --progress",
    "build": "npm run webpack",
    "dev": "NODE_ENV=development ./node_modules/.bin/webpack-dev-server --config=webpack.local.config.js --progress --hot",
    {% if cookiecutter.existing_project == 'y' -%}
    "python": "python manage.py runserver",
    "start": "npm run dev & npm run python"{% else %}"start": "npm run dev"{%- endif %}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{ cookiecutter.repo_owner }}/{{ cookiecutter.repo_name }}.git"
  },
  "author": "{{ cookiecutter.author_name }}",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/{{ cookiecutter.repo_owner }}/{{ cookiecutter.repo_name }}/issues"
  },
  "homepage": "https://github.com/{{ cookiecutter.repo_owner }}/{{ cookiecutter.repo_name }}#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-eslint": "^6.0.3",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.8.0",
    "css-loader": "^0.23.1",
    "deep-freeze": "0.0.1",
    "ejs-loader": "^0.2.1",
    "es6-promise": "^3.1.2",
    "eslint": "^2.8.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-babel": "^3.1.0",
    "eslint-plugin-react": "^4.2.3",
    "expect": "^1.19.0",
    "file-loader": "^0.8.5",
    "force-case-sensitivity-webpack-plugin": "^0.1.1",
    "html-webpack-plugin": "^2.15.0",
    "less": "^2.6.1",
    "less-loader": "^2.2.3",
    "mocha": "^2.4.5",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.3.0",
    "react-transform-hmr": "^1.0.4",
    "redux": "^3.5.2",
    "redux-devtools": "3.2.0",
    "redux-devtools-dispatch": "^2.2.0",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-filterable-log-monitor": "^0.6.4",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-devtools-multiple-monitors": "^1.0.1",
    "redux-immutable-state-invariant": "1.2.3",
    "redux-slider-monitor": "^1.0.5",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.6",
    {% if cookiecutter.existing_project == 'y' -%}
    "webpack-bundle-tracker": "0.0.93",
    {%- endif %}
    "webpack-dev-server": "^2.0.0-beta"
  }
}
