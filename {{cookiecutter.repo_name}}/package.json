{
  "name": "{{ cookiecutter.repo_name }}",
  "version": "{{ cookiecutter.version }}",
  "description": "{{ cookiecutter.project_name }}",
  "engines" : {
    "node" : ">=4"
  },
  "main": "{{ cookiecutter.static_root }}/index.js",
  "scripts": {
    "webpack-dev": "./node_modules/.bin/webpack-dev-server --progress --hot",
    "webpack-prod": "webpack --progress",
    "build-css": "sass -s compressed sass/index.scss dist/index.css",
    "build-js": "NODE_ENV=production npm run webpack-prod",
    "build": "npm run build-js && npm run build-css",
    "develop-css": "sass sass/index.scss dist/index.css",
    "develop-js": "NODE_ENV=local npm run webpack-prod",
    "develop": "npm run develop-js && npm run develop-css",
    "start-dev": "npm run develop",
    "start-prod": "npm run build",
    "start": "npm run start-dev",
    "test": "NODE_ENV=test nyc mocha"
  },
  "author": "{{ cookiecutter.author_name }}",
  "license": "{{ cookiecutter.open_source_license }}",
  {% if cookiecutter.repo_owner -%}
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{ cookiecutter.repo_owner }}/{{ cookiecutter.repo_name }}.git"
  },
  "bugs": {
    "url": "https://github.com/{{ cookiecutter.repo_owner }}/{{ cookiecutter.repo_name }}/issues"
  },
  "homepage": "https://github.com/{{ cookiecutter.repo_owner }}/{{ cookiecutter.repo_name }}#readme",
  {% endif -%}
  "dependencies": {
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.3",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.2.0",
    {% if cookiecutter.css_extension == 'less' -%}
    "less": "^2.6.1",
    {% endif -%}
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "redux": "^4.0.0",
    {% if cookiecutter.css_extension == 'sass' -%}
    "sass": "^1.3.1",
    {% endif -%}
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.4.2",
    "typescript": "^2.9.2",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-enzyme": "^1.0.0-beta.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "expect": "^23.2.0",
    "jsdom": "^11.11.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.7",
    "sinon": "^6.0.1",
    "sinon-chai": "^3.2.0",
    "tslint": "^5.10.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx",
      ".js",
      ".jsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
