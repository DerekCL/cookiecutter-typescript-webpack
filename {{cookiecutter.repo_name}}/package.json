{
  "name": "{{ cookiecutter.repo_name }}",
  "version": "{{ cookiecutter.version }}",
  "description": "{{ cookiecutter.project_name }}",
  "engines" : {
    "node" : ">=4"
  },
  "main": "{{ cookiecutter.static_root }}/index.js",
  "scripts": {
    "babel": "./node_modules/.bin/babel-node --presets es2015",
    "webpack": "npm run babel -- ./node_modules/.bin/webpack --progress",
    "build-css": "sass -s compressed sass/index.scss dist/index.css",
    "build-js": "NODE_ENV=production npm run webpack",
    "build": "npm run build-js && npm run build-css",
    "develop-css": "sass sass/index.scss dist/index.css",
    "develop-js": "NODE_ENV=local npm run babel -- ./node_modules/.bin/webpack-dev-server --progress --hot",
    "develop": "npm run develop-js && npm run develop-css",
    "start-dev": "npm run develop",
    "start-prod": "npm run build",
    "start": "npm run start-dev",
    "test": "NODE_ENV=test nyc mocha"
  },
  "author": "{{ cookiecutter.author_name }}",
  "license": "{{ cookiecutter.open_source_license }}",
  {% if cookiecutter.repo_owner -%}
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{ cookiecutter.repo_owner }}/{{ cookiecutter.repo_name }}.git"
  },
  "bugs": {
    "url": "https://github.com/{{ cookiecutter.repo_owner }}/{{ cookiecutter.repo_name }}/issues"
  },
  "homepage": "https://github.com/{{ cookiecutter.repo_owner }}/{{ cookiecutter.repo_name }}#readme",
  {% endif -%}
  "dependencies": {
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.3",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.2.0",
    "classnames": "^2.2.6",
    "exports-loader": "^0.7.0",
    "file-loader": "^1.1.11",
    "imports-loader": "^0.8.0",
    "lodash": "^4.17.10",
    {% if cookiecutter.css_extension == 'less' -%}
    "less": "^2.6.1",
    {% endif -%}
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "redux": "^4.0.0",
    {% if cookiecutter.css_extension == 'sass' -%}
    "sass": "^1.3.1",
    {% endif -%}
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.4.2",
    "typescript": "^2.9.2",
    "url-loader": "^1.0.1",
    "watchify": "^3.11.0",
    "webpack": "^4.14.0",
    "webpack-dev-server": "^3.1.4",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-enzyme": "^1.0.0-beta.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "expect": "^23.2.0",
    "jsdom": "^11.11.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.7",
    "react-addons-test-utils": "^15.6.2",
    "react-transform-hmr": "^1.0.4",
    "redux-devtools": "^3.4.1",
    "redux-devtools-dispatch": "^2.2.1",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "redux-devtools-multiple-monitors": "^1.0.1",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-slider-monitor": "^2.0.0-1",
    "sinon": "^6.0.1",
    "sinon-chai": "^3.2.0",
    "tslint": "^5.10.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx",
      ".js",
      ".jsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
